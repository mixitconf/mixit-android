<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="org.mixitconf">

    <uses-permission android:name="android.permission.READ_CALENDAR"/>
    <uses-permission android:name="android.permission.WRITE_CALENDAR"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:name=".MiXiTApplication"
            android:allowBackup="true"
            android:fullBackupContent="@xml/backup_descriptor"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">

        <service
                android:name="org.mixitconf.service.synchronization.SynchronizationService"
                android:exported="false">
        </service>
        <service
                android:name="org.mixitconf.service.initialization.DataInitializerService"
                android:exported="false">
        </service>

        <activity android:name=".view.ui.MixitActivity"/>
        <activity android:name=".view.ui.AboutActivity">
        </activity>
        <activity
                android:name=".view.ui.MainActivity"
                android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>

                <action android:name="android.intent.action.VIEW"/>
            </intent-filter>
        </activity>
    </application>

</manifest>