<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="org.mixitconf">

    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
            android:name=".MiXiTApplication"
            android:allowBackup="true"
            android:fullBackupContent="@xml/backup_descriptor"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">

        <receiver
                android:name=".service.notification.NotificationReceiver"
                android:exported="false" />

        <activity
                android:name="org.mixitconf.ui.MixitActivity"
                android:label="@string/app_name" />
        <activity
                android:name="org.mixitconf.ui.AboutActivity"
                android:label="@string/title_about" />
        <activity
                android:name="org.mixitconf.ui.MainActivity"
                android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
        <activity
                android:name="org.mixitconf.ui.SettingsActivity"
                android:label="@string/title_settings" />
    </application>

</manifest>